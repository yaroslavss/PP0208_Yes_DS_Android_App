<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    tools:context=".ui.view.fragments.TeacherDetailsFragment">

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_content_margin_top"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvTeacherProfession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Имя преподавателя" />

    <TextView
        android:id="@+id/tvTeacherProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top_half"
        app:layout_constraintBottom_toTopOf="@id/ivImgBigTeacher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherName"
        tools:text="Профессия преподавателя" />

    <ImageView
        android:id="@+id/ivImgBigTeacher"
        android:layout_width="216dp"
        android:layout_height="283dp"
        android:layout_marginTop="@dimen/default_margin_top_half"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/tvTeacherDancesSince"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherProfession"
        tools:srcCompat="@drawable/img_big_teacher" />

    <TextView
        android:id="@+id/tvTeacherDancesSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top_half"
        app:layout_constraintBottom_toTopOf="@id/tvTeacherTeachesSince"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImgBigTeacher"
        tools:text="Танцует с ..." />

    <TextView
        android:id="@+id/tvTeacherTeachesSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top_half"
        app:layout_constraintBottom_toTopOf="@id/tvTeacherDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherDancesSince"
        tools:text="Преподает с ..." />

    <TextView
        android:id="@+id/tvTeacherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top_half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherTeachesSince"
        tools:text="Описание" />

</androidx.constraintlayout.widget.ConstraintLayout>